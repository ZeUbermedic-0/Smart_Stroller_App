<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Smart_Stroller_App.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home"
    BackgroundColor="{StaticResource BackWash}">
    <!--  CREATES GRID LAYOUT  -->
    <Grid RowDefinitions="Auto,*">

        <!--  NESTED GRID  -->
        <Grid Padding="20,32" Row="0">

            <!--  GRADIENT HEADER  -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="{StaticResource Teal600}" />
                    <GradientStop Offset="1" Color="{StaticResource Teal700}" />
                </LinearGradientBrush>
            </Grid.Background>

            <!--  LAYOUT CONTROL/CONTAINER  -->
            <VerticalStackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="28"
                    Text="SmartStroller"
                    TextColor="White" />
                <Label
                    FontSize="14"
                    Text="Connected and Safe"
                    TextColor="#EEFFFFFF" />
            </VerticalStackLayout>

            <!--  RECTANGLE SPACER  -->
            <Border
                Margin="-24,-12,-24,-32"
                BackgroundColor="{StaticResource BackWash}"
                HeightRequest="24"
                VerticalOptions="End">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24,24,0,0" />
                </Border.StrokeShape>
            </Border>
        </Grid>


        <!--  Content  -->
        <ScrollView Grid.Row="1" Padding="20">

            <!--  LAYOUT CONTROL/CONTAINER  -->
            <VerticalStackLayout Spacing="16">


                <!--  CONTAINER/PANEL  -->
                <Border Style="{StaticResource CardBorder}">


                    <!--  SECTION HEADER "CONTAINER"  -->
                    <VerticalStackLayout>
                        <Label Style="{StaticResource CardTitle}" Text="Stroller Status" />

                        <!--  CONNECTION DISPLAY  -->
                        <HorizontalStackLayout
                            Margin="0,8,0,0"
                            Spacing="10"
                            VerticalOptions="Center">
                            <!--  GREEN CIRCLE  -->
                            <Border
                                Background="{StaticResource Teal700}"
                                HeightRequest="12"
                                WidthRequest="12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                            </Border>
                            <!--  TEXT NEXT TO CIRCLE  -->
                            <Label Text="Connected to SmartStroller" TextColor="{StaticResource Ink900}" />
                        </HorizontalStackLayout>


                        <!--  GRID CONTAINER  -->
                        <Grid
                            Margin="0,12,0,0"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="15">

                            <!--  MILES TRAVELED CONTAINER  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Style="{StaticResource StatTile}">


                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!--  TEXT INSIDE TOP LEFT BOX  -->
                                    <Label
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        Text="1.2"
                                        TextColor="{StaticResource Teal600}" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="mi traveled"
                                        TextColor="{StaticResource Muted}" />

                                </Grid>
                            </Border>

                            <!--  BATTERY PERCENT CONTAINER  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Style="{StaticResource StatTile}">
                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                                    <Label
                                        x:Name="BatteryValue"
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        Text="--%"
                                        TextColor="{StaticResource Teal600}" />



                                    <!--  Battery Progress Bar Container  -->
                                    <Border
                                        Grid.Row="1"
                                        Margin="4,0"
                                        BackgroundColor="{StaticResource Gray200}"
                                        HeightRequest="8">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>

                                        <!--  Actual Progress Bar  -->
                                        <Rectangle
                                            x:Name="BatteryBar"
                                            Fill="{StaticResource Teal600}"
                                            HorizontalOptions="Start"
                                            WidthRequest="0" />
                                    </Border>

                                    <Label
                                        Grid.Row="2"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Battery"
                                        TextColor="{StaticResource Muted}" />
                                </Grid>
                            </Border>

                            <!--  TEMPERATURE TRAVELED CONTAINER  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Style="{StaticResource StatTile}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        Text="67 °F"
                                        TextColor="{StaticResource Teal600}" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="temperature"
                                        TextColor="{StaticResource Muted}" />
                                </Grid>
                            </Border>

                            <!--  BATTERY STATUS CONTAINER  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource StatTile}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="22"
                                        HorizontalOptions="Center"
                                        Text="Charging"
                                        TextColor="{StaticResource Teal600}" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Battery status"
                                        TextColor="{StaticResource Muted}" />
                                </Grid>
                            </Border>

                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!--  CARD/CONTAINER EXAMPLE  -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout>
                        <Label Style="{StaticResource CardTitle}" Text="Quick Actions" />
                        <Label Text="Access frequently used features quickly from the home screen." TextColor="{StaticResource Muted}" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
