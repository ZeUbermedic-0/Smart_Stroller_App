<?xml version="1.0" encoding="utf-8" ?>
<!-- GRADIENT HEADER + CLEAR COMMENT BUBBLES -->
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Smart_Stroller_App.Views.IMUPage"
    BackgroundColor="{StaticResource BackWash}"
    Title="IMU">

    <!-- OUTER GRID: HEADER + CONTENT -->
    <Grid RowDefinitions="Auto,*">

        <!-- GRADIENT HEADER -->
        <Grid Padding="20,32" Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource Teal600}" Offset="0"/>
                    <GradientStop Color="{StaticResource Teal700}" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Label Text="IMU" FontSize="28" FontAttributes="Bold" TextColor="White" />
        </Grid>

        <!-- SCROLLABLE CONTENT -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!-- CARD: IMU READINGS -->
                <Border Style="{StaticResource CardBorder}">
                    <!-- CARD CONTAINER: SPACING, ROUNDING, SUBTLE STROKE -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Inertia Measurement Unit" Style="{StaticResource CardTitle}" />

                        <!-- RAW X/Y/Z READOUT -->
                        <Grid ColumnDefinitions="Auto,*,Auto,*,Auto,*" RowDefinitions="Auto" Margin="0,4,0,0">
                            <Label Text="X:" FontAttributes="Bold" />
                            <Label x:Name="IMUXVal" Grid.Column="1" />
                            <Label Text="Y:" Grid.Column="2" FontAttributes="Bold" />
                            <Label x:Name="IMUYVal" Grid.Column="3" />
                            <Label Text="Z:" Grid.Column="4" FontAttributes="Bold" />
                            <Label x:Name="IMUZVal" Grid.Column="5" />
                        </Grid>

                        <!-- ANGLE + STATUS STRIP -->
                        <Label x:Name="IMUAngleLabel" Text="Angle: --" Margin="0,8,0,0" TextColor="Black" FontAttributes="Bold"/>

                        <Border x:Name="IMUStatusBar" Padding="8" BackgroundColor="Black">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Label x:Name="IMUStatusText" Text="Balanced" TextColor="Black" FontAttributes="Bold" />
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- 2 X 2 TILES (4 BOXES) -->
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto"
      ColumnSpacing="15" RowSpacing="15" Margin="0,12,0,0">

                    <!-- TOP LEFT: Alert -->
                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" Padding="12">
                            <Label x:Name="AlertValue" Text="--" Grid.Row="0" FontSize="20" FontAttributes="Bold"
             TextColor="{StaticResource Teal600}" HorizontalOptions="Center"/>
                            <Label Text="Alert" Grid.Row="1" FontSize="12" TextColor="{StaticResource Muted}"
             HorizontalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- TOP RIGHT: Yaw (placeholder if no magnetometer) -->
                    <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" Padding="12">
                            <Label x:Name="YawValue" Text="--" Grid.Row="0" FontSize="24" FontAttributes="Bold"
             TextColor="{StaticResource Teal600}" HorizontalOptions="Center"/>
                            <Label Text="Yaw" Grid.Row="1" FontSize="12" TextColor="{StaticResource Muted}"
             HorizontalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- BOTTOM LEFT: Pitch -->
                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" Padding="12">
                            <Label x:Name="PitchValue" Text="--" Grid.Row="0" FontSize="24" FontAttributes="Bold"
             TextColor="{StaticResource Teal600}" HorizontalOptions="Center"/>
                            <Label Text="Pitch" Grid.Row="1" FontSize="12" TextColor="{StaticResource Muted}"
             HorizontalOptions="Center"/>
                        </Grid>
                    </Border>

                    <!-- BOTTOM RIGHT: Roll -->
                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardBorder}">
                        <Grid RowDefinitions="Auto,Auto" Padding="12">
                            <Label x:Name="RollValue" Text="--" Grid.Row="0" FontSize="24" FontAttributes="Bold"
             TextColor="{StaticResource Teal600}" HorizontalOptions="Center"/>
                            <Label Text="Roll" Grid.Row="1" FontSize="12" TextColor="{StaticResource Muted}"
             HorizontalOptions="Center"/>
                        </Grid>
                    </Border>
                </Grid>



                <!-- CARD/CONTAINER -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout>
                        <Label Text="IMU Adjustments" Style="{StaticResource CardTitle}" />
                        <Label Text="Change IMU intensity in Settings." TextColor="{StaticResource Muted}" />
                    </VerticalStackLayout>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
     </Grid>
</ContentPage>
