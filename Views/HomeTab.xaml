<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Smart_Stroller_App.Views.HomeTab"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hub Tab"
    BackgroundColor="{StaticResource BackWash}">
    <!--  CREATES GRID LAYOUT  -->
    <Grid RowDefinitions="Auto,*">

        <!--  NESTED GRID  -->
        <Grid Padding="20,32" Row="0">

            <!--  GRADIENT HEADER  -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="{StaticResource Teal600}" />
                    <GradientStop Offset="1" Color="{StaticResource Teal700}" />
                </LinearGradientBrush>
            </Grid.Background>

            <!--  LAYOUT CONTROL/CONTAINER  -->
            <VerticalStackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="30"
                    Text="StrollMate Hub "
                    TextColor="White" />

            </VerticalStackLayout>

            <!--  RECTANGLE SPACER  -->
            <Border
                Margin="-24,-12,-24,-32"
                BackgroundColor="{StaticResource BackWash}"
                HeightRequest="24"
                VerticalOptions="End">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24,24,0,0" />
                </Border.StrokeShape>
            </Border>
        </Grid>

        <!--  CONTENT  -->
        <ScrollView Grid.Row="1" Padding="20">

            <!--  LAYOUT CONTROL/CONTAINER  -->
            <VerticalStackLayout Spacing="16">


                <!--  CONTAINER/PANEL  -->
                <Border Style="{StaticResource CardBorder}">


                    <!--  SECTION HEADER "CONTAINER"  -->
                    <VerticalStackLayout>
                        <Label Style="{StaticResource CardTitle}" Text="Stroller Status" />

                        <!--  CONNECTION DISPLAY  -->
                        <HorizontalStackLayout
                            Margin="0,8,0,0"
                            Spacing="10"
                            VerticalOptions="Center">
                            <!--  GREEN CIRCLE  -->
                            <Border
                                Background="{StaticResource Teal700}"
                                HeightRequest="12"
                                WidthRequest="12">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                            </Border>
                            <!--  TEXT NEXT TO CIRCLE  -->
                            <Label Text="Connected to SmartStroller" TextColor="{StaticResource Ink900}" />
                        </HorizontalStackLayout>

                        <!--  GRID CONTAINER  -->
                        <Grid
                            Margin="0,12,0,0"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="15"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="15">
                            <!--  MILES TRAVELED CONTAINER  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                Style="{StaticResource StatTile}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!--  TEXT INSIDE TOP LEFT BOX  -->
                                    <Label
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        Text="1.2"
                                        TextColor="{StaticResource Teal600}" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Miles Traversed"
                                        TextColor="{StaticResource Muted}" />

                                </Grid>
                            </Border>

                            <!--  BATTERY PERCENT CONTAINER  -->
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Style="{StaticResource StatTile}">
                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
                                    <Label
                                        x:Name="BatteryValue"
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        Text="--%"
                                        TextColor="{StaticResource Teal600}" />



                                    <!--  BATTERY PROGRESS BAR CONTAINER  -->
                                    <Border
                                        Grid.Row="1"
                                        Margin="4,0"
                                        BackgroundColor="{StaticResource Gray200}"
                                        HeightRequest="8">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="4" />
                                        </Border.StrokeShape>

                                        <!--  ACTUAL PROGRESS BAR  -->
                                        <Rectangle
                                            x:Name="BatteryBar"
                                            Fill="{StaticResource Teal600}"
                                            HorizontalOptions="Start"
                                            WidthRequest="0" />
                                    </Border>

                                    <Label
                                        Grid.Row="2"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Battery"
                                        TextColor="{StaticResource Muted}" />
                                </Grid>
                            </Border>

                            <!--  TEMPERATURE TRAVELED CONTAINER  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Style="{StaticResource StatTile}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        Text="67 °F"
                                        TextColor="{StaticResource Teal600}" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Temperature"
                                        TextColor="{StaticResource Muted}" />
                                </Grid>
                            </Border>

                            <!--  BATTERY STATUS CONTAINER  -->
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource StatTile}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        FontAttributes="Bold"
                                        FontSize="22"
                                        HorizontalOptions="Center"
                                        Text="Charging"
                                        TextColor="{StaticResource Teal600}" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="Battery Status"
                                        TextColor="{StaticResource Muted}" />
                                </Grid>
                            </Border>

                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <!--  CARD/CONTAINER
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout>
                        <Label Style="{StaticResource CardTitle}" Text="Manually Control Brake locks" />
                        <Label Text="View status of brakes and control below." TextColor="{StaticResource Muted}" />
                    </VerticalStackLayout>
                </Border>
                -->

                <!--  BRACK LOCK CARD  -->
                <!--  INNER CONTAINER  -->
                <VerticalStackLayout Spacing="12">
                    <Label Style="{StaticResource CardTitle}" Text="Brake Lock Control" />
                    <!--  STATUS CARD  -->
                    <Border
                        x:Name="BrakeChip"
                        Padding="10,6"
                        BackgroundColor="#F1F5F9">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="14" />

                        </Border.StrokeShape>
                        <!--  TEXT  -->
                        <Label
                            x:Name="BrakeStatus"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Text="..."
                            TextColor="{StaticResource Ink900}" />
                    </Border>
                    <!--  BIG SENSOR-DISPLAY  -->
                    <Border Padding="18">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0" Color="#F0F9FB" />
                                <GradientStop Offset="1" Color="#E6F7F3" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.StrokeShape>

                            <RoundRectangle CornerRadius="16" />

                        </Border.StrokeShape>

                        <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                            <Label
                                x:Name="BrakePanelText"
                                FontAttributes="Bold"
                                FontSize="32"
                                Text="LOCKED"
                                TextColor="{StaticResource Teal600}" />
                            <Label
                                FontSize="14"
                                HorizontalOptions="Center"
                                Text="Current Status"
                                TextColor="{StaticResource Muted}" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <!--  BRAKE LOCK BUTTON  -->
                <Button
                    x:Name="ToggleBrakeBtn"
                    BackgroundColor="{StaticResource Teal600}"
                    Clicked="OnToggleBrakeClicked"
                    CornerRadius="12"
                    Text="Toggle Brake"
                    TextColor="White" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
