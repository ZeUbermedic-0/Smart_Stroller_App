<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Smart_Stroller_App.Views.SettingsTab"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Settings"
    BackgroundColor="{StaticResource Teal700}">

    <!--  OUTER GRID: HEADER + CONTENT  -->
    <Grid RowDefinitions="Auto,*">

        <!--  GRADIENT HEADER  -->
        <Grid Grid.Row="0" Padding="20,32">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="{StaticResource Teal600}" />
                    <GradientStop Offset="1" Color="{StaticResource Teal700}" />
                </LinearGradientBrush>
            </Grid.Background>
            <Label
                FontAttributes="Bold"
                FontSize="30"
                Text="Settings"
                TextColor="White" />
        </Grid>

        <ScrollView Padding="20">
            <VerticalStackLayout Spacing="22">
                <Label Style="{StaticResource CardTitle}" Text="Bluetooth" />
                <HorizontalStackLayout Spacing="10">
                    <Label FontSize="20" Text="Status:" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="20"
                        Text="{Binding Status}" />
                </HorizontalStackLayout>


                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout>
                        <Button
                            BackgroundColor="{StaticResource Teal600}"
                            Clicked="OnConnectClicked"
                            CornerRadius="12"
                            FontSize="20"
                            Text="Connect to SmartStroller"
                            TextColor="White" />
                        <Grid Padding="4,8" ColumnDefinitions="Auto,*" />
                        <Label
                            FontSize="26"
                            HorizontalOptions="Center"
                            Style="{StaticResource CardTitle}"
                            Text="Demo Mode" />
                        <Label
                            FontSize="18"
                            HorizontalOptions="Center"
                            Style="{StaticResource CardTitle}"
                            Text="Press for Demo" />
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="12">
                            <Label
                                Grid.Column="0"
                                FontSize="20"
                                Text="Toggle "
                                TextColor="#00637C"
                                VerticalOptions="Center" />
                            <Switch
                                Grid.Column="2"
                                HorizontalOptions="Center"
                                IsToggled="{Binding DemoMode}" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
