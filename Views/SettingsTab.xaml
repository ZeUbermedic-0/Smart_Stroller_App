<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Smart_Stroller_App.Views.SettingsTab"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Settings"
    BackgroundColor="#03936E">

    <VerticalStackLayout>
        <!--  GRADIENT HEADER  -->
        <Grid RowDefinitions="Auto,*">

            <Grid Grid.Row="0" Padding="20,32">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="{StaticResource Teal600}" />
                        <GradientStop Offset="1" Color="{StaticResource Teal700}" />
                    </LinearGradientBrush>
                </Grid.Background>
                <Label
                    FontAttributes="Bold"
                    FontSize="28"
                    Text="Settings"
                    TextColor="White" />
            </Grid>

            <!--  SCROLLABLE CONTENT  -->
            <ScrollView Grid.Row="1" Padding="20">
                <HorizontalStackLayout
                    Margin="0,8,0,0"
                    Spacing="18"
                    VerticalOptions="Center">
                    <Label
                        FontAttributes="Bold"
                        FontSize="26"
                        Text="Turn on Bluetooth"
                        TextColor="Black" />

                    <Switch
                        x:Name="switchAccept"
                        IsToggled="False"
                        OnColor="Green"
                        ThumbColor="White"
                        Toggled="switchAccept_Toggled" />
                </HorizontalStackLayout>



            </ScrollView>
        </Grid>


    </VerticalStackLayout>
</ContentPage>