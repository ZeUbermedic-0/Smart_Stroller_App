<ContentPage
    x:Class="Smart_Stroller_App.Views.PositionTab"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=" Position Hub"
    BackgroundColor="{StaticResource BackWash}">

    <!--  OUTER GRID: HEADER + CONTENT  -->
    <Grid RowDefinitions="Auto,*">

        <!--  GRADIENT HEADER  -->
        <Grid Grid.Row="0" Padding="20,32">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Offset="0" Color="{StaticResource Teal600}" />
                    <GradientStop Offset="1" Color="{StaticResource Teal700}" />
                </LinearGradientBrush>
            </Grid.Background>
            <Label
                FontAttributes="Bold"
                FontSize="30"
                Text="Stroller Position"
                TextColor="White" />
        </Grid>

        <!--  SCROLLABLE CONTENT  -->
        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="16">

                <!--  CARD: DISTANCE SENSOR  -->
                <Border Style="{StaticResource CardBorder}">
                    <VerticalStackLayout Spacing="12">
                        <Label Style="{StaticResource CardTitle}" Text="Distance Sensor" />

                        <!--  BIG NUMBER  -->
                        <Label
                            x:Name="ToFValue"
                            FontAttributes="Bold"
                            FontSize="36"
                            HorizontalOptions="Center"
                            Text="-- cm"
                            TextColor="{StaticResource Teal600}" />

                        <!--  VISUAL BAR  -->
                        <Grid
                            Margin="0,4,0,0"
                            BackgroundColor="#EEF2F7"
                            HeightRequest="12">
                            <Border
                                x:Name="ToFBar"
                                BackgroundColor="{StaticResource Teal600}"
                                HorizontalOptions="Start"
                                WidthRequest="0">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="6" />
                                </Border.StrokeShape>
                            </Border>
                        </Grid>

                        <!--  RANGE CHIPS  -->
                        <HorizontalStackLayout
                            Margin="0,8,0,0"
                            HorizontalOptions="Center"
                            Spacing="10">
                            <Border
                                x:Name="ChipClose"
                                Padding="14,8"
                                BackgroundColor="#F1F5F9">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14" />
                                </Border.StrokeShape>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Close"
                                    TextColor="{StaticResource Teal700}" />
                            </Border>
                            <Border
                                x:Name="ChipMid"
                                Padding="14,8"
                                BackgroundColor="#F1F5F9">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14" />
                                </Border.StrokeShape>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Medium"
                                    TextColor="{StaticResource Teal700}" />
                            </Border>
                            <Border
                                x:Name="ChipFar"
                                Padding="14,8"
                                BackgroundColor="#F1F5F9">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14" />
                                </Border.StrokeShape>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="Far"
                                    TextColor="{StaticResource Teal700}" />
                            </Border>
                        </HorizontalStackLayout>

                        <!--  CARD/CONTAINER  -->
                        <Border Style="{StaticResource CardBorder}">
                            <VerticalStackLayout>
                                <Label Style="{StaticResource CardTitle}" Text="Notifications and Alerts" />
                                <Label Text="Change distance parameters in Settings." TextColor="{StaticResource Muted}" />
                            </VerticalStackLayout>
                        </Border>

                    </VerticalStackLayout>
                </Border>

                <!--CARD: IMU READINGS-->
                <Border Style="{StaticResource CardBorder}">
                    <!--CARD CONTAINER: SPACING, ROUNDING, SUBTLE STROKE-->
                    <VerticalStackLayout Spacing="12">
                        <Label Style="{StaticResource CardTitle}" Text="Inertia Measurement Unit" />

                        <!--RAW X/Y/Z READOUT-->
                        <Grid
                            Margin="0,4,0,0"
                            ColumnDefinitions="Auto,*,Auto,*,Auto,*"
                            RowDefinitions="Auto">
                            <Label FontAttributes="Bold" Text="X:" />
                            <Label x:Name="IMUXVal" Grid.Column="1" />
                            <Label
                                Grid.Column="2"
                                FontAttributes="Bold"
                                Text="Y:" />
                            <Label x:Name="IMUYVal" Grid.Column="3" />
                            <Label
                                Grid.Column="4"
                                FontAttributes="Bold"
                                Text="Z:" />
                            <Label x:Name="IMUZVal" Grid.Column="5" />
                        </Grid>

                        <!--ANGLE + STATUS STRIP-->
                        <Label
                            x:Name="IMUAngleLabel"
                            Margin="0,8,0,0"
                            FontAttributes="Bold"
                            Text="Angle: --"
                            TextColor="Black" />
                        <Border
                            x:Name="IMUStatusBar"
                            Padding="8"
                            BackgroundColor="Black">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12" />
                            </Border.StrokeShape>
                            <Label
                                x:Name="IMUStatusText"
                                FontAttributes="Bold"
                                Text="Balanced"
                                TextColor="Black" />
                        </Border>
                    </VerticalStackLayout>
                </Border>
                <!--2 X 2 TILES (4 BOXES)-->
                <Grid
                    Margin="0,12,0,0"
                    ColumnDefinitions="*,*"
                    ColumnSpacing="15"
                    RowDefinitions="Auto,Auto"
                    RowSpacing="15">
                    <!--TOP LEFT: Alert-->
                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource CardBorder}">
                        <Grid Padding="12" RowDefinitions="Auto,Auto">
                            <Label
                                x:Name="AlertValue"
                                Grid.Row="0"
                                FontAttributes="Bold"
                                FontSize="20"
                                HorizontalOptions="Center"
                                Text="--"
                                TextColor="{StaticResource Teal600}" />
                            <Label
                                Grid.Row="1"
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="Alert"
                                TextColor="{StaticResource Muted}" />
                        </Grid>
                    </Border>

                    <!--TOP RIGHT:YAW(PLACEHOLDER)-->
                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Style="{StaticResource CardBorder}">
                        <Grid Padding="12" RowDefinitions="Auto,Auto">
                            <Label
                                x:Name="YawValue"
                                Grid.Row="0"
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="--"
                                TextColor="{StaticResource Teal600}" />
                            <Label
                                Grid.Row="1"
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="Yaw"
                                TextColor="{StaticResource Muted}" />
                        </Grid>
                    </Border>

                    <!--BOTTOM LEFT: PITCH-->
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource CardBorder}">
                        <Grid Padding="12" RowDefinitions="Auto,Auto">
                            <Label
                                x:Name="PitchValue"
                                Grid.Row="0"
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="--"
                                TextColor="{StaticResource Teal600}" />
                            <Label
                                Grid.Row="1"
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="Pitch"
                                TextColor="{StaticResource Muted}" />
                        </Grid>
                    </Border>

                    <!--BOTTOM RIGHT: ROLL-->
                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Style="{StaticResource CardBorder}">
                        <Grid Padding="12" RowDefinitions="Auto,Auto">
                            <Label
                                x:Name="RollValue"
                                Grid.Row="0"
                                FontAttributes="Bold"
                                FontSize="24"
                                HorizontalOptions="Center"
                                Text="--"
                                TextColor="{StaticResource Teal600}" />
                            <Label
                                Grid.Row="1"
                                FontSize="12"
                                HorizontalOptions="Center"
                                Text="Roll"
                                TextColor="{StaticResource Muted}" />
                        </Grid>
                    </Border>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
