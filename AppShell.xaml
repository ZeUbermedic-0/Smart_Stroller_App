<Shell
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:views="clr-namespace:Smart_Stroller_App.Views"
  x:Class="Smart_Stroller_App.AppShell"
  Shell.TabBarBackgroundColor="White"
  Shell.TabBarTitleColor="{StaticResource Teal600}"
  Shell.TabBarForegroundColor="{StaticResource Teal600}"
  Shell.TabBarUnselectedColor="Black"
  Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent Title="Hub"  Icon="home2.png"  ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Brake Control" Icon="absbrake.png"  ContentTemplate="{DataTemplate views:BrakePage}" />
        <ShellContent Title="Position"   Icon="radar1.png"  ContentTemplate="{DataTemplate views:ToFPage}" />
        <ShellContent Title="Incline"   Icon="angleimu.png"  ContentTemplate="{DataTemplate views:IMUPage}" />
    </TabBar>
</Shell>
