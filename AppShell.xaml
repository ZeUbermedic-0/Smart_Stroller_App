<Shell
    x:Class="Smart_Stroller_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Smart_Stroller_App.Views"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarForegroundColor="{StaticResource Teal600}"
    Shell.TabBarTitleColor="{StaticResource Teal600}"
    Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <ShellContent
            Title="Hub"
            ContentTemplate="{DataTemplate views:HomeTab}"
            Icon="homeadvisor.png" />

        <ShellContent
            Title="Position"
            ContentTemplate="{DataTemplate views:PositionTab}"
            Icon="radar1.png" />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsTab}"
            Icon="settings.png" />
    </TabBar>
</Shell>
