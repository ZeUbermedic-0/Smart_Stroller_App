<Shell
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:views="clr-namespace:Smart_Stroller_App.Views"
  x:Class="Smart_Stroller_App.AppShell"
  Shell.TabBarBackgroundColor="White"
  Shell.TabBarTitleColor="{StaticResource Teal600}"
  Shell.TabBarForegroundColor="{StaticResource Teal600}"
  Shell.TabBarUnselectedColor="#9AA1A9"
  Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent Title="Home"  Icon="home.png"  ContentTemplate="{DataTemplate views:HomePage}" />
        <ShellContent Title="Brake" Icon="brake.png" ContentTemplate="{DataTemplate views:BrakePage}" />
        <ShellContent Title="ToF"   Icon="tof.png"   ContentTemplate="{DataTemplate views:ToFPage}" />
        <ShellContent Title="IMU"   Icon="imu.png"   ContentTemplate="{DataTemplate views:IMUPage}" />
    </TabBar>
</Shell>
